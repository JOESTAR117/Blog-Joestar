<h1>Categories</h1>
<p>
  <%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>
</p>
<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <div class="d-flex flex-row">
            <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning m-1' %>
            <%= button_to 'Destroy', category,form: { data: { turbo_confirm: "Are you sure?"}}, method: :delete, class: 'btn btn-danger m-1 ' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
